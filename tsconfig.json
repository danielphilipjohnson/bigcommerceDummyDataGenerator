{
	"compilerOptions": {
	  "target": "ES2015",
	  "module": "ES2020",
	  "lib": ["es6", "esnext", "es2016", "dom", "dom.iterable", "scripthost"],
	  "declaration": true,
	  "sourceMap": true,
	  "outDir": "dist/esm",
	  "rootDir": "src",
	  "importHelpers": true,
	  "strict": true,
	  "noImplicitAny": true,
	  "moduleResolution": "node",
	  "baseUrl": ".",
	  "paths": {
		"@/*": ["src/*"]
	  },
	  "types": ["node"],
	  "allowSyntheticDefaultImports": true,
	  "esModuleInterop": true,
	  "resolveJsonModule": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "test", "playground"]
  }
  